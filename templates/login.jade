extends base

block titulo
    |Login

block body_content
    |{% if user.is_authenticated %}
    script
        |window.location.href = "/inicio";
    |{% else %}
    div(class="container-fluid")
        div(class="row")
            div(class="col-xs-1 col-sm-3 col-md-3 col-lg-3")
            div(class="col-xs-10 col-sm-6 col-md-6 col-lg-6")
                div(class="nameStartup text-center")
                    h1 UPTC
                    span Escuela de Ingenieria Industrial
                form(class="form-horizontal",method="post",action="{% url 'django.contrib.auth.views.login' %}")|{%csrf_token%}
                    div(class="form-group")
                        div(class="col-md-1")
                        div(class="col-md-10")
                            div(class="loginForm")
                                input(type="text",class="form-control",placeholder="Usuario",name="username")
                                input(type="password",class="form-control",id="password",placeholder="Contraseña",name = "password")
                                button(type="submit",class="btn btn-primary btn-block") Iniciar sesión
        div(class="row text-center")
            p &copy 2015
    |{% endif %}